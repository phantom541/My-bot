# WhatsApp Bot Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# === Bot Configuration ===
BOT_OWNER_NAME=Your_Bot_Owner_Name
BOT_OWNER_NUMBER=your_phone_number_here
BOT_PREFIX=%

# === API Keys (Replace with your actual keys) ===
# Cloudinary Configuration (for image generation/manipulation)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Giphy API (for GIF fetching)
GIPHY_API_KEY=your_giphy_api_key

# Unsplash API (for dragon images)
UNSPLASH_ACCESS_KEY=your_unsplash_access_key

# === Game Configuration ===
CARD_CLAIM_COST=100
CARD_PACK_COST=300
CARD_PACK_SIZE=3
GUILD_CREATE_COST=10000

# === Bot Settings ===
BOT_MODE=public
AUTO_TYPING=false
AUTO_READ=false
ANTIDELETE_ENABLED=false
AUTOREACT_ENABLED=false
WILD_SPAWNS_ENABLED=false